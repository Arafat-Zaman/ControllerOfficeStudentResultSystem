@model StudentEditViewModel

@{
    ViewBag.Title = "Edit Student";
}

<form enctype="multipart/form-data" asp-controller="Home" asp-action="edit" method="post" class="mt-3">
    <input hidden asp-for="ID" />
    <input hidden asp-for="ExistingExcelPath" />
    <div class="form-group row">
        <label asp-for="SubjectName" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="SubjectName" class="form-control" placeholder="Please Enter Subject Name" />
            <span asp-validation-for="SubjectName" class="text-danger"></span>

        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Year" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Year" class="form-control" placeholder="Please Enter Year" />
            <span asp-validation-for="Year" class="text-danger"></span>

        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Program" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Program" class="form-control" placeholder="Please Enter Program Name" />
            <span asp-validation-for="Program" class="text-danger"></span>

        </div>
    </div>

    <div class="form-group row">
        <label asp-for="ExcelFile" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <div class="custom-file">
                <input asp-for="ExcelFile" class="form-control custom-file-input" />
                <label class="custom-file-label">Click here to change file....</label>
            </div>
        </div>
    </div>

    <div asp-validation-summary="All" class="text-danger">
    </div>
    @*<div class="form-row">
            <div class="col-md-6">
                <button type="submit" class="btn btn-primary">Create</button>

                <a asp-action="Index" class="btn btn-primary"> List</a>
            </div>
        </div>*@
    <div class="form-row">
        <div class="form-group col-md-6">
            <input type="submit" value="Update" class="btn btn-primary btn-block" />
        </div>
        <div class="form-group col-md-6">
            <a asp-controller="home" asp-action="Index" class="btn btn-primary"> Cancel</a>
        </div>
    </div>

    @section Scripts{
        <script>
            $(document).ready(function () {
                $('.custom-file-input').on("change", function () {
                    var fileName = $(this).val().split("\\").pop();
                    $(this).next('.custom-file-label').html(fileName);
                });
            });
        </script>
    }
</form>