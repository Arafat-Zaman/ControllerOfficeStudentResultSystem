@model HomeDetailsViewModel

@{
    ViewBag.Title = "Student Details";
}

<div class="row justify-content-center m-3">
    <div class="col-sm-8">
        <div class="card">
            <div class="card-header">
                <h1>@Model.Student.SubjectName</h1>
            </div>

            <div class="card-body text-center">
                <img class="card-img-top" src="~/images/du.jpg" />

                <h4>ID: @Model.Student.ID</h4>
                <h4>SubjectName: @Model.Student.SubjectName</h4>
                <h4>Year: @Model.Student.Year</h4>
                <h4>Program: @Model.Student.Program</h4>
                <h4>Location: @Model.Student.Location</h4>
            </div>

            <div class="card-footer text-center">
                <a asp-controller="home" asp-action="index" class="btn btn-primary">Back</a>
                <a href="#" class="btn btn-primary">Edit</a>
                <a href="#" class="btn btn-danger">Delete</a>
            </div>

        </div>
    </div>

</div>

@section Scripts {
<script src="~/js/CustomScript.js"></script>
}