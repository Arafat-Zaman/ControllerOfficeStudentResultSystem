@model Student

@{ 
    ViewBag.Title = "Create Student";
}

<form asp-controller="Home" asp-action="Create" method="post" class="mt-3">
    
   <div class="form-group row">
        <label asp-for="SubjectName" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <select asp-for="SubjectName" class="custom-select mr-sm-2"
                    asp-items="Html.GetEnumSelectList<SubjectNamesListEnum>()"></select>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Year" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <select asp-for="Year" class="custom-select mr-sm-2"
                    asp-items="Html.GetEnumSelectList<YearListEnum>()"></select>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Program" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <select asp-for="Program" class="custom-select mr-sm-2"
                    asp-items="Html.GetEnumSelectList<ProgramListEnum>()"></select>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Location" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Location" class="form-control" placeholder="Location" />
        </div>
    </div>
    <div class="form-group row">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-primary">Create</button>
        </div>
    </div>
</form>